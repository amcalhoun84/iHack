<% layout('layout') -%>
<section class="content-header">
    <h1>
        <%= heading%>
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active"><%= heading%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-0">
            <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Resource Type</h3>
            </div><!-- box-header -->
            <form role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="resource-id">Resource ID</label>
                                <input type="text" class="form-control" id="resourceid" placeholder="Enter Resource ID">
                            </div>
                            <div class="form-group">
                                <label for="resource-category">Resource Categories</label>
                                <input type="text" class="form-control" id="resource_cat" placeholder="Eg: Car,Taxi">
                            </div>

                        </div><!-- /.box-body -->
            </form>

            </div><!-- box box-primary-->

        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-0">
            <div class="box box-primary">
                <div class="box header">
                    <h3 class="box-title">Resource Details</h3>
                </div>
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="product-name">Product Name</label>
                            <input type="text" class="form-control" id="productname" placeholder="Product">
                        </div>
                        <div class="form-group">
                            <label for="passenger-limit">Passenger Limit</label>
                            <input type="text" class="form-control" id="passengerlimit" placeholder="EX : 20,30">
                        </div>
                        <div class="form-group">
                            <label for="weight-limit">Weight Limit</label>
                            <input type="text" class="form-control" id="weightlimit" placeholder="EX : 200,300">
                        </div>
                        <div class="form-group">
                            <label for="power">Power</label>
                            <input type="text" class="form-control" id="power" placeholder="Used Power">
                        </div>
                    </div><!-- /box-body -->

                </form>
            </div><!-- /box box-primary -->
        </div>
    </div>

</section><!-- /.content -->
